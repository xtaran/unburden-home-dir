#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@

ifneq ($(filter nodoc,$(DEB_BUILD_PROFILES)),)
override_dh_installdocs:
override_dh_install:
	dh_install -punburden-home-dir
override_dh_auto_build:
override_dh_installman:
else
override_dh_install:
	dh_install --fail-missing
	dh_mkdocs
endif
